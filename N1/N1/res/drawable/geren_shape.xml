<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
     <!-- 边角的圆弧半径 -->
    <corners android:radius="5dp" />
    <!-- 实心填充 -->
    <solid android:color="#2D2B29" />  
    <!-- 描边：一般大小都是1dp -->
    <stroke
        android:width="1dp"
        android:color="#2D2B29" />
    <!-- 四周留出来的空白,和xml文件中的pad效果一样，对内起作用 -->
    <padding
        android:bottom="2dp"
        android:left="5dp"
        android:right="5dp"
        android:top="2dp" />

</shape>
