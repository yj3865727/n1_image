<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="10dp" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp" >

			
            <ImageView
                android:id="@+id/iv_home_lv_item_backgroundUrl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/home_lv_item_normal" />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="#30000000"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/home_lv_normal_jiangquan"
                android:gravity="center" >

                <TextView
                    android:id="@+id/tv_home_lv_item_rewardMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥1000"
                    android:textColor="#ffffff" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_home_lv_item_rewardSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="食日记"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_home_lv_item_rewardAttachSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="美食"
                    android:layout_marginTop="2dp"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tv_home_lv_item_rewardEndTime"
                    style="@style/homt_lv_item_tv_style"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/home_lv_normal_shijian"
                    android:text="4天" />

                <TextView
                    android:id="@+id/tv_home_lv_item_contributePostNum"
                    style="@style/homt_lv_item_tv_style"
                    android:layout_width="60dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:gravity="left"
                    android:layout_toLeftOf="@+id/tv_home_lv_item_contributePersonNum"
                    android:drawableLeft="@drawable/home_lv_item_tupian"
                    android:text="4" />

                <TextView
                    android:layout_width="60dp"
                    android:id="@+id/tv_home_lv_item_contributePersonNum"
                    style="@style/homt_lv_item_tv_style"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:gravity="left"
                    android:drawableLeft="@drawable/home_lv_normal_ren"
                    android:text="222" />
            </RelativeLayout>

            

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>