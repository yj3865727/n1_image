<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/mine_jiangquancell2x"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_personreward"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:src="@drawable/logo_placeholder2x" />

    <TextView
        android:id="@+id/tv_personreward_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_personreward"
        android:text="获奖途径：某某某" />

    <TextView
        android:id="@+id/tv_personreward_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_personreward"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_personreward"
        android:ellipsize="end"
        android:text="【相册里的第12张照片】主题幸运奖"
        android:textColor="@android:color/black"
        android:textSize="22px" />

    <TextView
        android:id="@+id/tv_personreward_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_personreward"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/iv_personreward"
        android:ellipsize="end"
        android:text="现金奖励已转至所绑定的支付宝帐号"
        android:textColor="@color/red"
        android:textSize="22px" />

</RelativeLayout>