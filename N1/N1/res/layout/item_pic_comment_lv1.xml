<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">

    
   <RelativeLayout
   android:layout_width="match_parent"
   android:layout_height="match_parent">
    <ImageView
        android:id="@+id/pic_comment_head_img"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_launcher" />
    <!-- 评论人头像 -->

    <TextView
        android:id="@+id/pic_comment_username_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/pic_comment_head_img"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/pic_comment_head_img"
        android:text=" " />
    <!-- 评论人用户名 -->

    <TextView
        android:id="@+id/pic_comment_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/pic_comment_head_img"
        android:layout_marginRight="30dp"
        android:text=" " />
    <!-- 评论时间 -->

    <TextView
        android:id="@+id/pic_comment_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/pic_comment_time_tv"
        android:layout_below="@id/pic_comment_username_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/pic_comment_head_img"
        android:text=" " />
    <!-- 评论内容 -->

    <View
        style="@style/bg_line"
        android:layout_below="@id/pic_comment_content_tv"
        android:layout_marginTop="10dp" />

</RelativeLayout>
</LinearLayout>