<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/set_personal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    

    <View
        android:id="@+id/set_viewMask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#20000000"
        android:visibility="gone" />

    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:orientation="vertical" >
            <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#235" >

        <ImageView
            android:id="@+id/set_background"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:alpha="0.6"
            android:background="@drawable/logo_placeholder2x" />

        <ImageView
            android:id="@+id/set_touxiang"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:src="@drawable/logo_placeholder2x" />

        <ImageButton
            android:id="@+id/set_back"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            android:src="@drawable/de_actionbar_back" />

        <TextView
            android:id="@+id/set_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>
        </LinearLayout>
        <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.75"
        android:background="#F0F3F6"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/wrap_layout"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/single_layout"
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <TextView
                    style="@style/usertext"
                    android:layout_marginLeft="15dp"
                    android:text="用户昵称" />

                <EditText
                    android:id="@+id/set_name"
                    style="@style/usertext"
                    android:background="@null"
                    android:layout_marginRight="15dp"
                    android:gravity="right" >

                    <requestFocus />
                </EditText>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/wrap_layout" >

            <LinearLayout
                android:id="@+id/sexchange"
                style="@style/single_layout"
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <TextView
                    style="@style/usertext"
                    android:layout_marginLeft="15dp"
                    android:text="性别" />

                <TextView
                    android:id="@+id/set_sex"
                    style="@style/usertext"
                    android:background="@null"
                    android:layout_marginRight="15dp"
                    android:gravity="right" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/wrap_layout" >

            <LinearLayout
                android:id="@+id/set_add"
                style="@style/single_layout"
                android:layout_width="fill_parent"
                android:layout_height="50dp" >

                <TextView
                    style="@style/usertext"
                    android:layout_marginLeft="15dp"
                    android:text="所在地" />

                <TextView
                    android:id="@+id/tv_address"
                    style="@style/usertext"
                    android:background="@null"
                    android:layout_marginRight="15dp"
                    android:gravity="right" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>