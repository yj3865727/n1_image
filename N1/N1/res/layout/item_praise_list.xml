<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/praise_item_rl"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/praise_list_head_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/logo_placeholder2x" />

        <TextView
            android:id="@+id/praise_list_username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/praise_list_head_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/praise_list_head_img"
            android:text="小明"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/praise_list_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/praise_list_head_img"
            android:layout_alignLeft="@id/praise_list_username_tv"
            android:text="15天前"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/praise_list_arrow_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/message_notice_arrow" />
        
      
    <View
        style="@style/bg_line"
        
        android:layout_alignLeft="@id/praise_list_time_tv" 
        android:layout_alignParentBottom="true"
       />

    </RelativeLayout>

</LinearLayout>