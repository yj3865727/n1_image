<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <com.lequan.n1.view.ImageWithTextView
            android:id="@+id/itv_home_lv_item_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <com.lequan.n1.view.ImageWithTextView
                android:id="@+id/itv_home_lv_item_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                
                android:layout_weight="1" />

            <com.lequan.n1.view.ImageWithTextView
                android:id="@+id/itv_home_lv_item_3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <com.lequan.n1.view.ImageWithTextView
            android:id="@+id/itv_home_lv_item_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1" />

        <com.lequan.n1.view.ImageWithTextView
            android:id="@+id/itv_home_lv_item_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1" />

        <com.lequan.n1.view.ImageWithTextView
            android:id="@+id/itv_home_lv_item_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>