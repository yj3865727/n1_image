<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F3F6"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/set_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" 
        android:background="@color/pink">

        <ImageView
            android:id="@+id/accountandsafety_back_person"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:clickable="true"
            android:src="@drawable/fanhui2x" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="账号与安全"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout style="@style/wrap_layout" >

        <!-- 上圆角,修改密码 -->

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:id="@+id/set_pass"
            style="@style/top_layout" >

            <ImageView
                android:layout_width="@dimen/space_25"
                android:layout_height="@dimen/space_25"
                android:layout_marginLeft="10dp"
                android:src="@drawable/mima" />

            <TextView
                style="@style/usertext"
                android:text="  修改密码" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>
        <!-- 分割线 -->

        <View style="@style/bg_line" />

        <LinearLayout
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:id="@+id/set_Email"
            style="@style/bottom_layout" >

            <ImageView
                android:layout_width="@dimen/space_25"
                android:layout_height="@dimen/space_25"
                android:layout_marginLeft="10dp"
                android:src="@drawable/youxiang" />

            <TextView
                style="@style/usertext"
                android:text="  邮箱" />
            <Button
                android:id="@+id/changeyx"
                android:background="@drawable/geren_id_shape"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="更换邮箱"
                android:textSize="@dimen/space_15"
                android:textColor="@color/white" />

            <ImageView 
                android:layout_marginLeft="5dp"
                style="@style/img_arrow" />

            

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginTop="@dimen/space_16" >

        <TextView
            style="@style/usertext"
            android:text="社交账号绑定"
            android:textSize="@dimen/text_size_15" />
    </RelativeLayout>

    <LinearLayout style="@style/wrap_layout" >

        <!-- 上圆角,修改密码 -->

        <LinearLayout 
            android:id="@+id/set_weibo"
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            style="@style/top_layout" >

            <ImageView
                android:layout_width="@dimen/space_25"
                android:layout_height="@dimen/space_25"
                
                android:layout_marginLeft="10dp"
                android:src="@drawable/weibo2" />

            <TextView
                style="@style/usertext"
                android:text="  新浪微博" />
            <Button
                android:id="@+id/bangding1"
                android:background="@drawable/geren_id_shape"
                android:textColor="@color/white"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textSize="@dimen/space_15"
                android:text="绑定" />

            <ImageView
                android:layout_marginLeft="5dp" 
                style="@style/img_arrow" />

            

        </LinearLayout>
        <!-- 分割线 -->

        <View style="@style/bg_line" />

        <!-- 无圆角 -->

        <LinearLayout 
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:id="@+id/set_weixin"
            style="@style/mid_layout" >

            <ImageView
                android:layout_width="@dimen/space_25"
                android:layout_height="@dimen/space_25"
                android:layout_marginLeft="10dp"
                android:src="@drawable/weixin2" />

            <TextView
                style="@style/usertext"
                android:text="  微信" />
			<Button
                android:id="@+id/wxbangding"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/geren_id_shape"
                android:textColor="@color/white"
                android:textSize="@dimen/space_15"
                android:text="绑定" />
            <ImageView 
                android:layout_marginLeft="5dp"
                style="@style/img_arrow" />

            

        </LinearLayout>

        <!-- 分割线 -->

        <View style="@style/bg_line" />

        <!-- 下圆角 -->

        <LinearLayout 
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            android:id="@+id/set_qq"
            style="@style/bottom_layout" >

            <ImageView
                android:layout_width="@dimen/space_25"
                android:layout_height="@dimen/space_25"
                android:layout_marginLeft="10dp"
                android:src="@drawable/qq2" />

            <TextView
                style="@style/usertext"
                android:text="  QQ" />
            <Button
                android:id="@+id/qqbangding"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/geren_id_shape"
                android:textColor="@color/white"
                android:textSize="@dimen/space_15"
                android:text="绑定" />
            <ImageView 
                android:layout_marginLeft="5dp"
                style="@style/img_arrow" />

            

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_12"
        android:layout_marginTop="@dimen/space_16" >

        <TextView
            style="@style/usertext"
            android:text="支付平台绑定"
            android:textSize="@dimen/space_15" />
    </RelativeLayout>

    <LinearLayout style="@style/wrap_layout" >

        <!-- 上圆角,修改密码 -->

        <LinearLayout 
            android:layout_height="50dp"
            android:id="@+id/set_zhifubao"
            android:layout_width="fill_parent"
            style="@style/top_layout" >

            <ImageView
                android:layout_width="@dimen/space_25"
                android:layout_height="@dimen/space_25"
                android:layout_marginLeft="10dp"
                android:src="@drawable/zhifubao" />

            <TextView
                style="@style/usertext"
                android:text="  支付宝" />
            <Button
                android:id="@+id/zfbbangding"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/geren_id_shape"
                android:textColor="@color/white"
                android:text="绑定" />

            <ImageView 
                android:layout_marginLeft="5dp"
                style="@style/img_arrow" />

            

        </LinearLayout>

        <View style="@style/bg_line" />

        <!-- 下圆角 -->

        <LinearLayout 
            android:id="@+id/set_weixinPay"
            android:layout_height="50dp"
            android:layout_width="fill_parent"
            style="@style/bottom_layout" >

            <ImageView
                android:layout_width="@dimen/space_25"
                android:layout_height="@dimen/space_25"
                android:layout_marginLeft="10dp"
                android:src="@drawable/weixinqianbao" />

            <TextView
                style="@style/usertext"
                android:text="  微信錢包" />
            <Button
                android:id="@+id/wq绑定"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/geren_id_shape"
                android:textColor="@color/white"
                android:text="绑定" />

            <ImageView 
                android:layout_marginLeft="5dp"
                style="@style/img_arrow" />

            

        </LinearLayout>
    </LinearLayout>

</LinearLayout>